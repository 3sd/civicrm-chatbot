{
    "name": "opis/closure",
    "description": "A library for PHP 5.3+ that can be used to serialize closures (anonymous functions).",
    "keywords": ["closure", "serialization", "function", "serializable", "serialize", "anonymous functions"],
    "homepage": "http://www.opis.io/closure",
    "license": "MIT",
    "authors": [
        {
            "name": "Marius Sarca",
            "email": "marius.sarca@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "jeremeamia/superclosure": "^2.0",
        "phpunit/phpunit": "3.7.*"
    },
    "autoload": {
        "psr-4": {"Opis\\Closure\\": "lib/"}
    },
    "autoload-dev": {
        "psr-4": {
            "Opis\\Closure\\Test\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.4.x-dev"
        }
    }
}
