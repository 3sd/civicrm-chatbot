<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Chat</base>
  <class>ChatQuestion</class>
  <name>civicrm_chat_question</name>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique ChatQuestion ID</comment>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>text</name>
    <type>text</type>
    <required>true</required>
  </field>

  <field>
    <name>conversation_type_id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>FK to conversation type</comment>
  </field>
  <foreignKey>
    <name>conversation_type_id</name>
    <table>civicrm_chat_conversation_type</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

</table>
